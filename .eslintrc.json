{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2023
  },
  "rules": {
    "quotes": ["error", "single"], // Utiliser uniquement les simples quotes
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }] // Espace entre les accolades
  }
}
